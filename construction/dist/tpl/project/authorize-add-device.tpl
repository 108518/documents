<div class="layui-row">
    <div class="layui-col-xs5">
        <p class="element-left-title">所有设备</p>
        <div class="module-left-content">
            <li>
                {{# layui.each(d, function(index, item){ }}
                    <span class="element-list active" data-deviceid="{{ item.deviceid }}" data-id="{{ index}}">{{ item.name }}</span>
                {{# }) }}
            </li>
            
            {{# if(d.length === 0){ }} 
                无数据 
            {{# } }}
        </div>
    </div>
    <div class="layui-col-xs2 module-center-content">
        <div class="element-add active">
            <p>添加</p>
            <i class="icon-right-arrow-full"></i>
        </div>
        <div class="element-delete active">
            <i class="icon-left-arrow-gray"></i>
            <p>删除</p>
        </div>
    </div>
    <div class="layui-col-xs5">
        <p class="element-right-title">账号可使用设备</p>
        <div class="module-right-content">

        </div>
    </div>
</div>