@charset "utf-8";

@import "../variables";
@import "../function";
@import "../mixins";
@import "../icon";

body {
	@extend .extend-layer-date;
	@extend .extend-layer-dialog;
}
.module-user-edit,
.module-user-add {
	@extend .extend-article;

	background-color: #f8fafb;
	border-radius: 5px;

	.table-search {
		background-color: #ffffff;
		height: 78px;
		margin-bottom: 8px;
		border-top-left-radius: 5px;
		border-top-right-radius: 5px;
		position: relative;
		padding: 21px 25px;

		.element-title {
			margin-top: 8px;
			padding-left: 0;
		}

		cite {
			font-style: normal;
			font-size: 18px !important;
		}

		.layui-form-label {
			width: auto;
			font-size: 14px;
			line-height: 18px;
			letter-spacing: 0px;
			color: #6e7b7d;
		}
		.element-add-device {
			@extend .extend-empty-btn;
			margin-left: 28px;
		}
	}

	.m-add-content {
		background-color: #ffffff;
		padding: 18px 26px;
		.layui-form-label {
			width: auto;
			padding: 9px 15px 9px 0;
		}
		.layui-input-block {
			margin-left: 0;
		}
		.m-title {
			padding: 10px 0 0 0;
		}
		.m-content-list {
			min-height: 150px;
			height: auto;
			border: 1px solid;
			border-color: #CCC;
			border-radius: 4px;
			padding: 20px;
			margin-bottom: 10px;
			margin-top: 12px;
		}
		.el-base-info {
			display: flex;

			.el-head-img {
				width: 200px;
				text-align: center;
				
				img {
				    width: 166px;
					height: 166px;
					display: block;
					margin: 12px 0;
					background-color: #CCC;
				}

				.layui-btn {
					width: 83%;
    				float: left;
				}
			}

			.el-info-detail {
				
			}
		}
	}
}

.module-take-photo-dialog {
	.layui-layer-title {
		background-color: #1c232d;
	}
	.layui-layer-btn,
	.layui-layer-content {
		background-color: #1c232d;
	}
	.el-photo-bottom {
		margin-top: 508px;
		color: #FFF;
		font-style: normal;
		padding: 0 20px;
		align-items: center;

		p {
			width: 95%;
		}
		i {
			cursor: pointer;
		}
	}

	video {
		position: absolute;
	}

	canvas {
		width: 637px;
		height: 491px;
		position: absolute;
		left: 0;
		background: url('../../img/project/photo-bg.png') no-repeat;
	}
}