@charset "utf-8";

@import "../variables";
@import "../function";
@import "../mixins";
@import "../icon";

body {
	@extend .extend-layer-date;
	@extend .extend-layer-dialog;
}
.module-account-list {
	height: 100%;
	overflow-y: auto;

	.table-container {
		margin: $module-container-padding;
		background-color: #f8fafb;
		border-radius: 5px;

		.table-value {
			@extend .table-search;

			.element-border-left {
				border-left: 1px solid #eee;
			}
			.element-count-title {
				color: #999;
			}

			.element-count-value {
				font-size: 22px;
				margin-top: 2px;
			}

		}
		.table-search {
			background-color: #ffffff;
			height: 78px;
			margin-bottom: 8px;
			border-top-left-radius: 5px;
			border-top-right-radius: 5px;
			position: relative;
			padding: 21px 25px;

			.layui-tab {
				margin: 0;
			}
			.layui-tab-card {
				border: 0;
				box-shadow: none;
			}
			.layui-tab-card>.layui-tab-title {
				background-color: #fff;
			}
			.layui-tab-card>.layui-tab-title .layui-this {
				color: $base-color;
			}

			.element-title {
				font-size: 16px !important;
				line-height: 18px;
				color: #212023 !important;
				padding-left: 0;
			}

			.layui-form-label {
				width: auto;
				font-size: 14px;
				line-height: 18px;
				letter-spacing: 0px;
				color: #6e7b7d;
			}

			.module-input-border {
				background-color: #f4f5f6;
				border-radius: 17px;
				display: flex;
				width: 276px;
				margin-left: 18px;

				input {
					background-color: #f4f5f6;
					border: none;
					border-radius: 17px;
				}
				button {
					background-color: #5fbdff;
					border-radius: 0;
					border-top-right-radius: 17px;
					border-bottom-right-radius: 17px;
				}
			}

			.element-add-device {
				@extend .extend-empty-btn;
				margin-left: 28px;
			}

			@extend .layui-form-select;
		}

		.table-content {
			background-color: #ffffff;
			height: 100%;
			padding: 18px 26px;
			
			.element-account-add {
				text-align: center;
				height: 40px;
				line-height: 40px;
				font-size: 15px;
				color: #999;
				border: 1px dashed $base-bg-color;
				cursor: pointer;

				&:hover {
					color: $base-color;
					border: 1px dashed $base-color;
				}
			}
			.layui-table-cell {
				height: auto;
			}

			.table-toolbar {
				a {
					color: $base-color;
					margin: 0 4px;
					/* &:hover {
						text-decoration: underline !important;
					} */
				}
			}
			@extend .extend-layer-laypage;

		}
	}
}