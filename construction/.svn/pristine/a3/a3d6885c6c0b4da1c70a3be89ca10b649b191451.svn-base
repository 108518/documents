@charset "utf-8";

@import "../variables";
@import "../function";
@import "../mixins";
@import "../icon";

body {
	@extend .extend-layer-dialog;
}
.module-user-list {
	@extend .extend-article;

	.table-container {
		background-color: #f8fafb;
		border-radius: 5px;

		.table-search {
			background-color: #ffffff;
			height: 78px;
			margin-bottom: 8px;
			border-top-left-radius: 5px;
			border-top-right-radius: 5px;
			position: relative;
			padding: 21px 25px;

			.element-title {
				margin-top: 8px;
				padding-left: 0;
			}

			cite {
				font-style: normal;
				font-size: 18px !important;
			}

			.layui-form-label {
				width: auto;
				font-size: 14px;
				line-height: 18px;
				letter-spacing: 0px;
				color: #6e7b7d;
			}

			.module-input-border {
				background-color: #f4f5f6;
				border-radius: 17px;
				display: flex;
				width: 276px;
				margin-left: 18px;

				input {
					background-color: #f4f5f6;
					border: none;
					border-radius: 17px;
				}
				button {
					background-color: #5fbdff;
					border-radius: 0;
					border-top-right-radius: 17px;
					border-bottom-right-radius: 17px;
				}
			}

			.element-add-device {
				@extend .extend-empty-btn;
				margin-left: 28px;
			}
		}

		.table-content {
			background-color: #ffffff;
			height: 100%;
			padding: 18px 26px;
			
			.element-count-data {
				font-size: 12px;
				line-height: 18px;
				color: #6e7b7d;
			}

			.element-user-add {
				@extend .extend-add;
			}

			.element-user-list {
				a {
					padding-left: 6px;
					font-size: 18px;
				}
				span {
					&:hover {
						color: $base-color;
						text-decoration: underline;
						cursor: pointer;
					}
				}
			}
			@extend .extend-layer-laypage;
		}
	}
}