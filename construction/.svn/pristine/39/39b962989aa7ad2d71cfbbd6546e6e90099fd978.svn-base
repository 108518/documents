@charset "utf-8";
@import "../variables";
@import "../function";
@import "../mixins";
@import "../icon";

html,
body {
	font-size: 14px;
}

.page-project {
	font-family: MicrosoftYaHei;
    margin: 0;
	padding: 0;
	
	header {
		width: 100%;
		height: pcrem(80px);
		background-color: #0b1a30;
		display: flex;
		align-items: center;
		text-align: center;

		.el-logo {
			display: inline-block;
			width: 13.459%;
		}

		.el-title {
			display: inline-block;
			font-weight: 600;
			font-size: pcrem(36px);
			color: #8493ad;
			width: 66.1452%;
			text-align: center;

			select {
				color: #8493ad;
				border: 0;
				background-color: #0b1a30;
				text-align: center;
			}
		}

		.el-time {
			display: flex;
			width: 20.3958%;
			font-family: Arial-BoldMT;
			color: #5fbdff;

			.el-time-hms {
				font-size: pcrem(36px);
			}
			.el-time-date {
				font-size: pcrem(16px);
				line-height: pcrem(20px);
				margin: pcrem(4px) 0 0 pcrem(22px);
				text-align: left;
				display: inline;
			}
		}
	}

	article {
		width: 100%;
		display: flex;
		position: relative;
		min-height: pcrem(1000px);
		background-color: #020f21;

		.m-common-title {
			font-size: pcrem(20px);
			line-height: pcrem(18px);
			color: #49596b;
			padding: pcrem(28px) 0;
			text-align: left;

			em {
				vertical-align: text-top;
    			font-style: normal;
			}

			i {
				margin-right: pcrem(14px);
			}
		}
		.m-count {
			width: 19.759491%;
			height: 100%;
			text-align: center;

			.m-common-title {
				padding-left: pcrem(38px);
			}   

			.el-list {
				width: pcrem(320px);
				height: pcrem(205px);
				background-color: #0b1a30;
				border-radius: 5px;
				text-align: center;
				margin: 0 pcrem(20px) pcrem(22px) pcrem(38px);

				.el-list-value {
					font-size: pcrem(48px);
					line-height: pcrem(48px);
					padding-top: pcrem(58px);
				}
				.el-list-subtitle {
					font-size: pcrem(24px);
					line-height: pcrem(24px);
					color: #8493ad;
					padding-top: pcrem(33px);
				}
			}

			.el-one {
				color: #5f94ff;
			}
			.el-two {
				color: #ffa35f;
			}
			.el-three {
				color: #5fbdff;
			}
			.el-four {
				color: #53e0f5;
			}
		}

		.m-org {
			width: 44.89583%;
			.el-content {
				width: pcrem(838px);
				min-height: pcrem(885px);
				background-color: #0b1a30;
				border-radius: 5px;

				.el-title {
					height: pcrem(90px);
					padding: 0 pcrem(54px);
					font-size: pcrem(24px);
					line-height: pcrem(90px);
					color: #49596b;
					background-color: #12233c;

					span {
						&:nth-child(2) {
							float: right;
						}
					}
				}

				.el-danwei {
					height: pcrem(495px);
				}

				.el-gongzhong,
				.el-danwei {
					overflow: auto;

					.el-content-list {
						.el-list {
							padding: pcrem(38px) pcrem(55px) 0 pcrem(55px);
							span {
								color: #8493ad;
								font-size: pcrem(24px);
								&:nth-child(2) {
									float: right;
								}

								strong {
									color: #ffffff;
								}
							}
						}
					}
				}
			}
		}

		.m-ontime {
			width: 34.1666%;

			.el-content {
				width: pcrem(640px);
				min-height: pcrem(885px);
				background-color: #12233c;
				border-radius: 5px;

				.el-detail {
					height: pcrem(343px);
					padding: pcrem(45px) pcrem(65px);
					background-color: #0b1a30;
					
					.el-name-status {

						.el-name {
							display: inline-block;
							font-size: pcrem(32px);
							color: #ffffff;
						}

						.el-status {
							display: inline-block;
							float: right;
							color: #ffffff;
							
							i {
								margin-right: pcrem(14px);
							}
							em {
								font-style: normal;
								font-weight: normal;
								color: #8493ad;
								font-size: pcrem(24px);
								strong {
									color: #5fbdff;
									font-size: pcrem(32px);
								}
							}
						}
					}

					.el-title {
						margin: pcrem(35px) 0;
					}

					.el-info {
						display: flex;
					}
					.el-info-detail {
						width: pcrem(379px);
						margin-right: pcrem(10px);

						.el-info-list {
							padding-bottom: pcrem(20px);
							font-size: pcrem(18px);
							line-height: pcrem(18px);
							color: #8493ad;

							i {
								font-style: normal;
								width: pcrem(54px);
								display: inline-block;
								text-align: justify;
							}
						}
					}
					.el-info-pic {
						width: pcrem(132px);
						height: pcrem(173px);
						background: url('../../img/page/renyuan-default.png') no-repeat;
					}

					.m-no-data {
						font-size: pcrem(20px);
						color: #8493ad;
						padding: pcrem(152px) 0 0 pcrem(211px);
					}
				}
				.el-title {
					font-size: pcrem(24px);
					line-height: pcrem(24px);
					color: #49596b;
				}
				.el-photo {
					padding: pcrem(40px) pcrem(75px);

					.el-pic {
						width: pcrem(321px);
						height: pcrem(320px);
						margin: pcrem(28px) 0 0 pcrem(94px);
						background: url('../../img/page/xianchang-default.png') no-repeat;
						background-size: cover;
					}
				}
			}
		}

	}
}